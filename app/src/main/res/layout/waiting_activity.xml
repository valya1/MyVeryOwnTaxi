<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivDriveIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="109dp"
            android:background="@drawable/taxi"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/tvThankyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/ivDriveIcon"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/thankyou"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp"
            />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnToMap"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvThankyou"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="К карте"
            android:textColor="#fff"
            android:background="@drawable/button"

            />


    </RelativeLayout>

</LinearLayout>